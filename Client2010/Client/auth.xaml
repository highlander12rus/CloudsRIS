<Page x:Class="Client.auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
	Title="auth">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Name="AwtorizationStackPanel" VerticalAlignment="Center">
            <Label Content="CloudsRIS" Height="33" Name="label3" FontSize="20" FontWeight="Bold" />
            <Label Content="Login" Height="28" Name="label1" />
            <TextBox Height="23" Name="login_box" Width="120" />
            <Label Content="Password" Height="28" Name="label2" />
            <PasswordBox Height="23" Name="PasswordBox" Width="120" />
            <Label Height="28" Name="label_errors" IsEnabled="True" Visibility="Hidden" />
            <Button Content="Auth" Height="23" Name="AuthButton" Width="75" Click="AuthButton_Click" />
        </StackPanel>
    </Grid>
</Page>
